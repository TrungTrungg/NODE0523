<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">
      <div class="row clearfix">
        <div class="col-md-12">
          <img src="/uploads/no-image.png" class="alignleft img-circle img-thumbnail my-0" alt="Avatar" style="max-width: 84px;">
          <div class="heading-block border-0">
            <h3><%= user.last_name %> <%= user.first_name %></h3>
            <span>Thông tin của bạn</span>
          </div>
          <div class="clear"></div>
          <div class="row clearfix">
            <div class="col-lg-12">

              <div class="tabs tabs-alt clearfix" id="tabs-profile">

                <ul class="tab-nav clearfix">
                  <li><a href="#tab-info"><i class="icon-rss2"></i> Thông tin cá nhân</a></li>
                  <li><a href="#tab-orders"><i class="icon-users"></i> Đơn hàng</a></li>
                </ul>

                <div class="tab-container">

                  <div class="tab-content clearfix" id="tab-info">
                    <table class="table table-bordered table-striped">
                      <thead>
                        <tr>
                          <th>Field</th>
                          <th>Value</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>
                            <code>Tên:</code>
                          </td>
                          <td><%= user.first_name %></td>
                        </tr>
                        <tr>
                          <td>
                            <code>Họ:</code>
                          </td>
                          <td><%= user.last_name %></td>
                        </tr>
                        <tr>
                          <td>
                            <code>Email:</code>
                          </td>
                          <td><%= user.email %></td>
                        </tr>
                        <tr>
                          <td>
                            <code>Số điện thoại:</code>
                          </td>
                          <td><%= user.phone %></td>
                        </tr>
                        <tr>
                          <td>
                            <code>Địa chi:</code>
                          </td>
                          <td><%= user.address %></td>
                        </tr>
                      </tbody>
                    </table>

                  </div>

                  <div class="tab-content clearfix" id="tab-orders">
                    <table class="table table-bordered table-striped">
                      <thead>
                        <tr>
                          <th>Ngày mua</th>
                          <th>Mã Khách hàng</th>
                          <th>Tổng tiền sản phẩm</th>
                          <th>Tin nhắn</th>
                        </tr>
                      </thead>
                      <tbody>
                        <%- 
                            orders.map((order) => {
                                return(`
                                <tr>
                                  <td>
                                    <code>${order.createdAt.toISOString().slice(0, 10)}</code>
                                  </td>
                                  <td>${order.user_code}</td>
                                  <td>${order.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',')} VNĐ</td>
                                  <td>${order.message}</td>
                                </tr>
                                `)
                            }).join('')
                        %>

                      </tbody>
                    </table>

                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>