<% include ../../components/item/list %>
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Item</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="#">Item</a>
                    </li>
                    <li class="breadcrumb-item active">List</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<% include ../../components/StatusFilter %>
<div class="col-md-12">
    <div class="card">
        <div class="card-header bg-dark">
            <h3 class="card-title">List Items</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <table class="table">
                <thead>
                    <tr>
                        <th><input type="checkbox" value="" id="check-all"/></th>
                        <th style="width: 10px">#</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Ordering</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <%- showListItems(items,currentStatus,  keyword, pagination)  %>
                </tbody>
            </table>
        </div>
        <div class="card-footer clearfix">
            <nav aria-label="Page navigation example" class="float-right">
                <%- showPagination(currentStatus, keyword, pagination) %>
            </nav>

        </div>
    </div>
</div>
