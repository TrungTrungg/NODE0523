<%
    showFilter = (filter, currentStatus, keyword) => {
        let query = ''
        if(keyword) 
            query = `?search=${keyword}`
       
        xHtmlFilter = filter.map((status,index) => {
            let color = ''
            let isActive = ''
            switch (status.name.toLowerCase()) {
                case 'active':
                    color = 'success'
                    break;
                case 'inactive':
                    color = 'danger'
                    break;
                default:
                    color = 'dark'
                    break;
            }
            if(status.name === currentStatus) isActive = 'active'
            if(currentStatus === undefined && status.name.toLowerCase() === 'all') isActive = 'active'
            
            return(`
                <a 
                    type="button" 
                    class="btn btn-outline-${color} ${isActive}"
                    href="/admin/item/status/${status.name}"
                >${status.name} (${status.qty})</a>
            `)
        }).join('') 
        return xHtmlFilter
    }
%>
