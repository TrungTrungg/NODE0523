<% include ../../components/BulkAction %>
<% include ../../components/pagination %>
<% include ../../viewHelpers/item_helper %>
<% include ../../viewHelpers/modal_helper %>
<!-- Content Header (Page header) -->
<% include ../../components/PageHeader %>
<div class="col-md-12">
  <div class="card">
    <form action="/admin/<%= collection %>/sendAll" method="POST">
      <div class="card-header bg-dark">
        <div class="d-flex justify-content-between align-items-center">

          <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title flex-1">List
              <%= collection %></h3>
            <%- showAction(collection) %>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <a type="button" class="btn btn-secondary" style="margin-left: 5px !important;" href="/admin/<%= collection %>/add">Add</a>
          </div>
        </div>
      </div>
      <!-- /.card-header -->
      <div class="card-body p-0">
        <table class="table">
          <thead>
            <tr>
              <th><input type="checkbox" id="checkAll" /></th>
              <th>#</th>
              <th>Code</th>
              <th>Type</th>
              <th>Value</th>
              <th>Started At</th>
              <th>Expired At</th>
              <th>Quantity</th>
            </tr>
          </thead>
          <tbody>
            <%- showListItems(collection, items, currentStatus,  keyword, pagination)  %>
          </tbody>
        </table>
      </div>
    </form>
    <div class="card-footer clearfix">
      <nav aria-label="Page navigation example" class="float-right">
        <%- showpagination(collection, currentStatus, keyword, pagination) %>
      </nav>

    </div>
  </div>
</div>