<div class="tab-content" id="login">
  <div class="card mb-0">
    <div class="card-body" style="padding: 40px;">
      <form id="login-form" name="login-form" class="mb-0" action="/auth/login" method="post">

        <h3>Đăng nhập tài khoản</h3>

        <div class="row">
          <div class="col-12 form-group">
            <label for="login-form-username">Email:</label>
            <input type="text" id="login-form-username" name="email" value="" class="form-control" />
          </div>

          <div class="col-12 form-group">
            <label for="login-form-password">Mật khẩu:</label>
            <input type="password" id="login-form-password" name="password" value="" class="form-control" />
          </div>

          <div class="col-12 form-group">
            <button class="button button-3d button-black m-0" id="login-form-submit" name="login-form-submit" value="login">Đăng nhập</button>

          </div>
        </div>

      </form>
    </div>
  </div>
</div>