<%
    showRadio = (special, label, name) => {
        return(`
            <div class="form-group d-flex  justify-content-start col">
                <label>${label}</label>
                <div class="form-check ml-5">
                    <input class="form-check-input" type="radio" name="${name}" value="true" ${special ? 'checked' : '' }>
                    <label class="form-check-label">Yes</label>
                </div>
                <div class="form-check  ml-5">
                    <input class="form-check-input" type="radio" name="${name}" value="false"  ${special ? '' : 'checked'}>
                    <label class="form-check-label">No</label>
                </div>
                
            </div>
        `)
    }
%>