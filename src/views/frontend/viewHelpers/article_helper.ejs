<%
    showArticle = (articles) => {
        let listArticles = articles.map((article, index) => {
            let reverseImg = ''
            let reverseContent = 'ps-md-4'
            if(index % 2 != 0) {
                reverseImg = 'order-md-last'
                reverseContent = 'pe-md-4'
            }
            return(`
            <div class="entry col-12">
                <div class="grid-inner row g-0">
                    <div class="col-md-4 ${reverseImg}">
                        <div class="entry-image">
                            <a href="/frontend/images/blog/full/17.jpg" data-lightbox="image"><img src="/backend/uploads/${article.image}" alt="Standard Post with Image"></a>
                        </div>
                    </div>
                    <div class="col-md-8 ${reverseContent}">
                        <div class="entry-title title-sm">
                            <h2>
                                <a href="blog-single.html">${article.name}</a>
                            </h2>
                        </div>
                        <div class="entry-meta">
                            <ul>
                                <li>
                                    <i class="icon-calendar3"></i>
                                    ${article.createdAt.toISOString().slice(0, 10)}</li>
                                <li>
                                    <a>
                                        <i class="icon-user"></i>
                                        ${article.author}</a>
                                </li>
                                <li>
                                    <i class="icon-folder-open"></i>
                                    <a>Tin mới</a>
                                </li>
                                
                                <li>
                                    <a>
                                        <i class="icon-camera-retro"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="entry-content">
                            <p>${article.description}</p>
                            <a href="/blog/detail/${article.id}" class="more-link">Xem thêm</a>
                        </div>
                    </div>
                </div>
            </div>
            `)
        }).join('')
        return listArticles
    }

    showSidebarArticle = (articles) => {
         let listArticles = articles.map((article, index) => {
            let reverseImg = ''
            let reverseContent = 'ps-md-4'
            if(index % 2 != 0) {
                reverseImg = 'order-md-last'
                reverseContent = 'pe-md-4'
            }
            return(`
                <div class="entry col-12">
                    <div class="grid-inner row g-0">
                        <div class="col-auto">
                            <div class="entry-image">
                                <a>
                                    <img class="rounded-circle" src="/backend/uploads/${article.image}" alt="Image">
                                </a>
                            </div>
                        </div>
                        <div class="col ps-3">
                            <div class="entry-title">
                                <h4>
                                    <a>${article.name}</a>
                                </h4>
                            </div>
                            <div class="entry-meta">
                                <ul>
                                    <li>
                                        <a>
                                            <i class="icon-user"></i>
                                            ${article.author}</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            `)
        }).join('')
        return listArticles

    }

%>
