<%
    showForm = (method, action, enctype, id, name, ordering, status, image) => {
        return(`
            <form method="${method}" action="${action}" enctype="${enctype}">
                <div class="card-body">
                    <input type="hidden" name="id" value="${id ? id : ''}">
                    <div class="form-group">
                        <label for="itemName">Name</label>
                        <input name="name" value="${name ? name : ''}" type="text" class="form-control" id="itemName" placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label for="itemOrdering">Ordering</label>
                        <input name="ordering" value="${ordering ? ordering : ''}" type="number" class="form-control" id="itemOrdering">
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <select name="status" class="form-control" style="width: 100%;">
                            ${status ? `<option ${status === "active" ? "selected" : " "}>Active</option>
                                        <option ${status === "inactive" ? "selected" : " "}>Inactive</option>` : 
                                        `<option selected="selected" value="">Status</option>
                                        <option value="active">Active</option>
                                        <option value="inactive">Inactive</option>`}
                           
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Upload</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" id="add-image" class="custom-file-input" onchange="javascript:handleShowImage()" name="image">
                                <label class="custom-file-label" for="add-image">Choose file</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <img src="${image ? '/backend/uploads/'+image : ''}" alt="" id="show-image">
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-secondary">Submit</button>
                    <a type="button" class="btn btn-secondary float-right" href="/admin/item">Cancel</a>
                </div>
            </form>
        `)
    }
%>
